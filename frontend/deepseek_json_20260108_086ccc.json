{
  "name": "frontend",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001", // Use different port for multiple apps
    "dev:turbo": "next dev --turbopack", // Faster dev server
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:profile": "next build --profile", // React profiling
    "start": "next start",
    "start:prod": "NODE_ENV=production next start", // Explicit production
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit", // Separate type checking
    "preview": "npm run build && npm run start", // Preview build locally
    "format": "prettier --write ." // If adding prettier
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "framer-motion": "^12.23.26",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "lucide-react": "^0.468.0", // Modern icon library
    "tailwind-merge": "^2.6.0", // Better class merging
    "clsx": "^2.1.1", // Alternative to classnames
    "@radix-ui/react-slot": "^1.1.2", // UI primitives
    "@radix-ui/react-icons": "^1.3.0-1", // More icons
    "zod": "^3.24.2", // Form validation (if needed)
    "@hookform/resolvers": "^3.10.0" // React-hook-form + Zod
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.1",
    "@tailwindcss/postcss": "^4",
    "@types/classnames": "^2.2.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "@typescript-eslint/parser": "^8",
    "@typescript-eslint/eslint-plugin": "^8",
    "autoprefixer": "^10.4.20", // Better CSS compatibility
    "postcss": "^8.4.49", // Explicit PostCSS version
    "@tailwindcss/typography": "^0.5.16", // Prose styling
    "@tailwindcss/forms": "^0.5.9", // Better form styles
    "@tailwindcss/aspect-ratio": "^0.4.2" // Aspect ratio utilities
  }
}